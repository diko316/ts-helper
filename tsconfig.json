{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./lib",
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "target": "ES2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es6", "es2016", "es2017", "ES2020", "ESNext"],
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "tools"
  ]
}
